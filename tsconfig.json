{
  "compilerOptions": {
    "target": "ES2022",                               // modern JS
    "lib": ["DOM", "DOM.Iterable", "ESNext"],         // browser + modern features
    "module": "ESNext",
    "moduleResolution": "Bundler",                   // Next.js 14 default
    "jsx": "preserve",                               // Next.js handles JSX
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,

    // ✅ Improves intellisense + type safety
    "plugins": [{ "name": "next" }],

    // ✅ Path alias support (optional, for "@/..." imports)
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
